PORT=5000

# --- MongoDB (Modelo B) ---
# DB global administrativa (tenants, roles, auditoría)
MONGO_URL_GLOBAL=mongodb://localhost:27017/duckhub_admin
# Prefijo para DB por tienda (store_<slug>)
TENANT_DB_PREFIX=store_

# --- Tenant resolution ---
# HOST_HEADER: resuelve tenant por dominio host
# X_TENANT_SLUG: resuelve tenant por header (útil en local/dev)
TENANT_RESOLUTION_ORDER=HOST_HEADER,X_TENANT_SLUG
TENANT_HEADER_NAME=X-Tenant-Slug
TENANT_STRICT_MODE=true
TENANT_FALLBACK_SLUG=

# --- Auth/JWT ---
JWT_SECRET=CHANGE_THIS_SECRET_WITH_AT_LEAST_32_CHARACTERS
JWT_ISSUER=duckhack-cloud-backend
JWT_AUDIENCE=duckhack-cloud-clients
JWT_ACCESS_EXPIRES_IN=1h
JWT_EMAIL_VERIFY_EXPIRES_IN=24h

# --- Email ---
EMAIL_HOST=XXXX
EMAIL_PORT=587
EMAIL_USER=xxxx@duck-hack.com
EMAIL_PASS=xxxxxx

# --- Frontend / CORS ---
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:82,http://localhost:89
CORS_ALLOW_CREDENTIALS=false

# --- Uploads ---
UPLOADS_DIR=/tmp/media-uploads
